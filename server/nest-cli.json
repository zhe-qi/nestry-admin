{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": {
      "type": "swc",
      "options": {}
    },
    "typeCheck": true,
    "assets": [
      { "include": "module/system/gen/gen-template", "watchAssets": true }
    ]
  }
}
